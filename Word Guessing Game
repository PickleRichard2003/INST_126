import random

# word storage
word_bank = ['Youtube', 'Discord', 'Instragram', 'Twitter', 'Twitch', 'Snapchat', 'TikTok']

# taking a random word from bank
target_word = random.choice(word_bank)

# create function to get the number of players

def get_num_players():
    while True:
        try:
            num_players = int(input("How many players are playing?: "))
            if num_players >= 1:
                return num_players
            else:
                print("Please enter a number greater than or equal to 1.")
        except ValueError:
            print("Invalid input. Please enter a number.")

